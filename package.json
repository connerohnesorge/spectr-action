{
  "name": "spectr-action",
  "version": "1.0.0",
  "private": true,
  "description": "A GitHub Action to run Spectr validation for spec-driven development.",
  "main": "dist/spectr-action/index.js",
  "scripts": {
    "build": "tsc",
    "check": "biome check --write",
    "package": "ncc build -o dist/spectr-action src/spectr-action.ts",
    "act": "act pull_request -W .github/workflows/test.yml --container-architecture linux/amd64 -s GITHUB_TOKEN=\"$(gh auth token)\"",
    "test": "node scripts/run-tests.js __tests__/unit/**/*.test.ts",
    "test:all": "node scripts/run-tests.js",
    "test:unit": "node scripts/run-tests.js __tests__/unit/**/*.test.ts",
    "test:integration": "node scripts/run-tests.js __tests__/integration/**/*.test.ts",
    "test:watch": "tsx --test --watch __tests__/unit/**/*.test.ts",
    "test:coverage": "node --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=coverage.lcov --test __tests__/unit/**/*.test.ts",
    "all": "npm install && npm run build && npm run check && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connerohnesorge/spectr.git"
  },
  "keywords": [
    "actions",
    "spectr",
    "validation",
    "spec-driven",
    "action"
  ],
  "author": "@connerohnesorge",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/tool-cache": "^2.0.2",
    "@octokit/core": "^7.0.6",
    "@octokit/plugin-paginate-rest": "^14.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^17.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "@types/semver": "^7.7.1",
    "@vercel/ncc": "^0.38.4",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
